<fieldset class="optional prompt">
  <legend>Additional Information</legend>
  <%= f.input :subject,                as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :alternate_title,        as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :coverage_spatial,       as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :coverage_temporal,      as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :publisher,              as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :bibliographic_citation, input_html: { class: 'input-xlarge' } %>
  <%= f.input :language,               as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :note,                   as: :text, input_html: { class: 'input-xlarge' } %>
  <%= f.input :requires,               input_html: { class: 'input-xlarge' } %>
</fieldset>
