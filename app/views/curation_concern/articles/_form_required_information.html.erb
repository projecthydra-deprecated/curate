<fieldset class="required">
  <legend>Required Information</legend>

  <%= f.input :title,
              input_html: { class: 'input-xlarge' }
  %>

  <%= f.input :creator, as: :multi_value, label: 'Author', required: true, input_html: { value: "@current_user.name" } %>

  <%= f.input :abstract,
              as: :text,
              input_html: {
                class: 'input-xxxlarge',
                rows: '14'
              },
              label: 'Abstract'
  %>

  <%= f.input :date_created,
    as: :multi_value,
    label: "Date Created",
    hint: "Format as YYYY-MM-DD"
  %>

</fieldset>