<fieldset class="required">
  <legend>Required Information</legend>

    <div class="row">
      <div class="span6">

        <%= f.input :title,
          input_html: { class: 'input-xlarge' },
          label: "Title"
        %>

        <%= f.input :alternate_title,
          as: :multi_value,
          input_html: { class: 'input-xlarge' },
          label: "Alternate Title"
        %>

        <%= f.input :creator,  as: :multi_value, input_html: { class: 'input-xlarge' }, label: "Creator" %>
        <%= render partial: 'linked_editors', locals: {f: f, curation_concern: curation_concern, label: 'Editor'} %>
        <%= render partial: 'linked_groups', locals: {f: f, curation_concern: curation_concern, label: "Editor Group"} %>

        <%= f.input :date_created,
          as: :multi_value,
          label: "Date Created"
        %>

        <%= f.input :description,
          as: :multi_value,
          input_html: {
            class: 'input-xlarge'
          },
          label: "Description"
        %>
   
        Type: </br></br>

        <%= f.collection_check_boxes :type,
          [['Poster'], ['Visual Art'], ['Photograph'], ['Painting'],
          ['Map/chart'], ['Cartoon/comic']],
          :first, :first
        %>

        <%= f.input :location,
          as: :multi_value,
          input_html: { class: 'input-xlarge' },
          label: "Geographic Location"
        %>

        <%= f.input :coverage_spatial,
          as: :multi_value,
          input_html: { class: 'input-xlarge' },
          label: "Geographic Subject"
        %>

        <%= f.input :coverage_temporal,
          as: :multi_value,
          input_html: { class: 'input-xlarge' },
          label: "Time Period"
        %>


        <%= f.input :measurements,
                    as: :multi_value,
                    input_html: { class: 'input-xlarge' },
                    label: "Measurements"
        %>

        <%= f.input :material,
                    as: :multi_value,
                    input_html: { class: 'input-xlarge' },
                    label: "Material"
        %>

        <%= f.input :requires,
                    as: :multi_value,
                    input_html: { class: 'input-xlarge' },
                    label: "Required Software"
        %>


    </div>

    <div class="span6">

      <%= f.input :source,
                  as: :multi_value,
                  input_html: { class: 'input-xlarge' },
                  label: "Source"
      %>

      <%= f.input :date_photographed,
          as: :multi_value,
          label: "View Date"
      %>


      <%= f.input :publisher,
                  as: :multi_value,
                  input_html: { class: 'input-xlarge' },
                  label: "Publisher"
      %>

      <%= f.input :subject,
                  as: :multi_value,
                  input_html: { class: 'input-xlarge' },
                  label: "Subject"
      %>

      <%= f.input :bibliographic_citation,
                  input_html: { class: 'input-xlarge' },
                  label: "Citation"
      %>

      <%= f.input :inscription,
                  as: :multi_value,
                  input_html: { class: 'input-xlarge' },
                  label: "Inscription"
      %>

      <%= f.input :cultural_context,
                  as: :multi_value,
                  input_html: { class: 'input-xlarge' },
                  label: "Culture"
      %>

      <%= f.input :note,
                  as: :multi_value,
                  input_html: { class: 'input-xlarge' },
                  label: "Note"
      %>

    </div>
  </div>
</fieldset>
