<% content_for :page_title, "#{application_name} Dashboard" %>

<% content_for :page_header do %>

<div class="row">

    <div class="span8">
      <h2>My Dashboard</h2>
    </div>

    <div class="span4 page-search">
      <%= render 'search_form' %>
    </div>

</div>

<% end %>

<% content_for :sidebar do %>

  <%= render 'facets' %>

<% end %>

<% extra_head_content << render_opensearch_response_metadata.html_safe %>

<% if params.has_key?("q") %>
  <div class="alert alert-info">
    <i class="icon-search icon-large"></i> You searched for: <strong><%= params[:q] %></strong>
  </div>
<% end %>

<%= render 'did_you_mean' %>
<%= render 'facet_selected' %>

<%= render 'constraints', :localized_params=>params %>

<% render_pagination_info @response, :entry_name=>'item' %>

<%= render 'sort_and_per_page' %>

<%= render 'dashboard/document_list'  %>

<%= render 'results_pagination' %>
