<% content_for :layout_name, 'curate_nd, ' %>
<% content_for :body do %>

  <header id="banner" role="banner">
    <hgroup>
      <div id="brand-bar-wrapper">
        <%= render 'shared/brand_bar' %>
      </div>
      <div id="title-bar-wrapper">
        <div class="container">
          <div id="title-bar" class="row">
            <div id="site-search" class="span4">

<%= render 'shared/site_search' if show_site_search? %>

            </div>

            <div id="site-title" class="span4">
              <%# NOTE: The product_name SHOULD link to the root URL, but the root URL should also be the catalog index; specs to follow %>
              <h1><%= link_to t('sufia.product_name'), catalog_index_path, tabindex: :'-1' %></h1>
            </div>

            <nav id="site-actions" class="span4" role="menu">

<%= render 'shared/site_actions' if show_site_actions? %>

            </nav>
          </div>
        </div>
      </div>
    </hgroup>
  </header>


<%= render 'shared/flash_message' %>

  <div id="main" role="main" class="container <%= yield(:page_class) if content_for?(:page_class)%>">
  <% if content_for?(:page_header) %>
    <div class="row">
      <div class="span12 main-header">
        <%= yield(:page_header) %>
      </div>
    </div>
  <% end %>

    <%= content_for?(:main) ? yield(:main) : yield %>
  </div>

  <%= render '/footer' %>

<% end %>

<%= render :template => 'layouts/boilerplate' %>
